        <item name="chipMinHeight">36dp</item>
        <item name="chipBackgroundColor">#FF9800</item>
        <item name="android:textColor">#8BC34A</item>
    </style>

    <style name="NoIndicator">styles</style> <style name="Widget.BottomNavigationView.NoIndicator" parent="@style/Widget.Material3.BottomNavigationView">
