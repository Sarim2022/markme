<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/clTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tab_rounded_corner_border_light"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:paddingVertical="15dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent
"
        >
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="30dp"

            android:layout_height="30dp"
            android:src="@drawable/left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tvheaderInfo"
            app:layout_constraintStart_toEndOf="@id/backbutton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="My class intormation"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            app:layout_constraintTop_toBottomOf="@id/backbutton"/>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="#C6E1F6"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/clTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDetailClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BTech CSE Section A"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDetailSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Mon, Wed, Fri | 10:00 AM - 11:00 AM"
                android:textSize="16sp"
                android:textColor="#555" />

            <TextView
                android:id="@+id/tvDetailRoomCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Room: 305 | Code: XRTK45"
                android:textSize="16sp"
                android:textColor="#555" />

            <TextView
                android:id="@+id/btnStartClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingVertical="10dp"
                android:textColor="@color/mainColor"
                android:textStyle="bold"

                android:text="Start Attendance"
                android:background="@drawable/notificationtopbar"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvStudentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrolled Students"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardSummary" />

