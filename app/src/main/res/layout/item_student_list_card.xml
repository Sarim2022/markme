<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:strokeColor="#C8E5FB"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Student Name -->
        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            android:layout_marginBottom="4dp"
            tools:text="Rohan Verma" />

        <!-- Student Email -->
        <TextView
            android:id="@+id/tvStudentEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"
            tools:text="rohan@gmail.com" />

        <!-- Student Classes -->
        <TextView
            android:id="@+id/tvStudentClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            tools:text="Classes: Btech1, BCA2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fabStartAttendance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_rounded_corner_border_light"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="View student "
                android:textColor="@color/mainColor"
                android:textStyle="bold" />
            <View
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/fabDeleteDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Remove student"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:background="@drawable/bg_tab_rounded_corner_border_red"
                />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
