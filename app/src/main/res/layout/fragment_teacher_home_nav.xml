<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F2F2"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        android:paddingHorizontal="15dp"
        android:background="#EDEFFA"
        android:paddingVertical="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/bell"
        android:contentDescription="Notifications"
        android:layout_marginEnd="12dp"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MarkMyAttendence" android:layout_weight="1"
            android:textSize="24sp" android:textColor="#002D62" android:textStyle="bold"/>



            <ImageView
                android:id="@+id/ivChatUi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chat"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"/>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#63A6F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topNavBar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topCons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round_corner"
        android:paddingBottom="30dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserGreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            tools:text="Hello, Sarim Hasan ðŸ‘‹"
            android:textColor="@color/white"
            android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llUserInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvUserGreet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collage Name"
                        android:textColor="#C8E4FF" android:textSize="12sp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserCollage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Computer Science &amp; Engineering"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject Name"
                        android:textColor="#C8E4FF"
                        android:textSize="12sp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserSubjectName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="CS301"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textColor="#C8E4FF"
                        android:textSize="12sp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Discrete Mathematics"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject code"
                        android:textColor="#C8E4FF"
                        android:textSize="12sp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserSubjectCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="CS301"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llActivateAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:background="@drawable/selector_activate_attendance"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/llUserInfoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Activate Attendance"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/imageView_start_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/start"
                    android:contentDescription="Activate"
            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMyClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="2dp"
        android:text="My Classes : "
        android:textSize="20sp"
        android:visibility="visible"
        android:textColor="@color/mainColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topCons" />

    <!-- NEW: Placeholder for "No Classes Yet" -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClasses"
        android:paddingHorizontal="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMyClass"
        tools:listitem="@layout/class_card_layout" />

    <TextView
        android:id="@+id/tvNoClasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No classes created yet. Tap '+' to start one!"
        android:textColor="#888888"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMyClass" />


</androidx.constraintlayout.widget.ConstraintLayout>